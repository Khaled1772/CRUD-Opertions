@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Department</h1>

<form asp-action="Edit">
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code">
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation">
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>|
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>