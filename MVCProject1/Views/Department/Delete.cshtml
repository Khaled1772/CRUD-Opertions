@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure To Delete @Model.Name Department</h1>

<form asp-action="Delete">
<div class="mb-3 form-group">
    <label class="form-label" asp-for="Code"></label>
    <input readonly class="form-control" asp-for="Code">

</div>
<div class="mb-3 form-group">
    <label class="form-label" asp-for="Name"></label>
    <input readonly class="form-control" asp-for="Name">

</div>
<div class="mb-3 form-group">
    <label class="form-label" asp-for="DateOfCreation"></label>
    <input readonly class="form-control" asp-for="DateOfCreation">

</div>

<button type="submit" class="btn btn-danger">Delete</button>|
<a asp-action="Index" class="btn btn-light">Cancel</a>
</form>