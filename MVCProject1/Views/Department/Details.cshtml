@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>Department @Model.Name Details</h1>


<div class="mb-3 form-group">
    <label class="form-label" asp-for="Code"></label>
    <input readonly class="form-control" asp-for="Code">

</div>
<div class="mb-3 form-group">
    <label class="form-label" asp-for="Name"></label>
    <input readonly class="form-control" asp-for="Name">

</div>
<div class="mb-3 form-group">
    <label class="form-label" asp-for="DateOfCreation"></label>
    <input readonly class="form-control" asp-for="DateOfCreation">

</div>

<a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.Id">Edit</a>
<a asp-action="Index" class="btn btn-light">Back To List</a>


